#! /bin/sh
### BEGIN INIT INFO
# Provides:          pidgeon-sv
# Required-Start:    
# Required-Stop:     
# X-Stop-After:      sendsigs
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: pidgeon services
# Description:       Pidgeon services are advanced irc bouncer
### END INIT INFO

#
# Author: Petr Bena <benapetr@gmail.com>
#

PATH=/sbin:/usr/sbin:/bin:/usr/bin
DESC="Pidgeon services"
NAME=pidgeon-sv
DAEMON=/usr/bin/mono
DAEMON_FILE=/opt/pidgeon-sv/pidgeon-sv.exe
PIDFILE=/var/run/pidgeon-sv.pid
SERVICEUSER=pidgeon
LOGFILE=/var/log/pidgeon-sv.log

SCRIPTNAME=/etc/init.d/$NAME

# Exit if the package is not installed
[ -x "$DAEMON" ] || exit 0

# Read configuration variable file if it is present
[ -r /etc/default/$NAME ] && . /etc/default/$NAME

# Define LSB log_* functions.
. /lib/lsb/init-functions

do_start()
{
	# Return
	#   0 if daemon has been started
	#   1 if daemon was already running
	#   other if daemon could not be started or a failure occured
        touch $PIDFILE || exit 3
        chown $SERVICEUSER $PIDFILE || exit 3
        touch $LOGFILE || exit 3
        chown $SERVICEUSER $LOGFILE || exit 3
	start-stop-daemon -b -u $SERVICEUSER -c $SERVICEUSER -d /opt/pidgeon-sv --start --startas $DAEMON -- $DAEMON_FILE -s --pid $PIDFILE --log $LOGFILE
}

do_stop()
{
	# Return
	#   0 if daemon has been stopped
	#   1 if daemon was already stopped
	#   other if daemon could not be stopped or a failure occurred
	start-stop-daemon --stop --quiet --pidfile $PIDFILE
}

case "$1" in
  start)
	log_daemon_msg "Starting $DESC" "$NAME"
	do_start
	case "$?" in
		0) log_end_msg 0 ;;
		1) log_progress_msg "already started"
		   log_end_msg 0 ;;
		*) log_end_msg 1 ;;
	esac

	;;
  stop)
	log_daemon_msg "Stopping $DESC" "$NAME"
	do_stop
	case "$?" in
		0) log_end_msg 0 ;;
		1) log_progress_msg "already stopped"
		   log_end_msg 0 ;;
		*) log_end_msg 1 ;;
	esac

	;;
  restart|force-reload)
	$0 stop
	$0 start
	;;
  status)
	status_of_proc -p $PIDFILE $DAEMON $NAME && exit 0 || exit $?
	;;
  *)
	echo "Usage: $SCRIPTNAME {start|stop|restart|force-reload|status}" >&2
	exit 3
	;;
esac
